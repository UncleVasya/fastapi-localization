[flake8]
per-file-ignores =
    # imported but unused
    __init__.py: F401

ignore =
    # A003 class attribute "id" is shadowing a python builtin
    A003,

    # C408 Unnecessary dict call - rewrite as a literal.
    C408,

max-line-length = 120
exclude =
    .git,
    __pycache__,
    */tests/*,
    venv/*,
    build/*,
